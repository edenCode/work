{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceRoot}/${relativeFile}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lopencv_core",
                "-lopencv_highgui",
                "-lopencv_videoio",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs"
            ]
        }
    ]
}